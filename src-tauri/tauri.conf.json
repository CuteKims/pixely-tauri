{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "pixely-tauri",
  "version": "0.0.0",
  "identifier": "com.bluecandle.pixely",
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "decorations": false,
        "fullscreen": false,
        "title": "Pixely",
        "width": 854,
        "height": 480,
        "minWidth": 854,
        "minHeight": 480,
        "additionalBrowserArgs": "--enable-features=msWebView2EnableDraggableRegions"
      }
    ],
    "security": {
      "capabilities": [
        "migrated"
      ],
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost"
    }
  }
}